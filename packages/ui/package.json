{
    "name": "@codegram/ui",
    "version": "0.0.1",
    "description": "UI kit for Codegram app",
    "main": "index.js",
    "author": "Riccardo Perra <riccardo.perra@icloud.com> (https://github.com/riccardoperra)",
    "license": "MIT",
    "private": true,
    "module": "./dist/esm/index.js",
    "types": "./dist/types/index.d.ts",
    "exports": {
      ".": {
        "types": "./dist/types/index.d.ts",
        "import": "./dist/esm/index.js"
      }
    },
    "scripts": {
      "pre-commit": "lint-staged --relative",
      "pre-commit-prettier": "prettier --write",
      "pre-commit-eslint": "eslint --ext .js,.jsx,.mjs,.ts,.tsx -c ../../.eslintrc.js --fix",
      "lint": "eslint . --ext .js,.jsx,.mjs,.ts,.tsx -c ../../.eslintrc.js",
      "clean": "rimraf dist",
      "build-esm": "tsc -p tsconfig.esm.json",
      "build-dts": "tsc -p tsconfig.dts.json",
      "build": "pnpm clean && pnpm build-esm && pnpm build-dts",
      "dev": "chokidar \"src/**/*.{ts,tsx}\" -c \"pnpm build\""
    },
    "devDependencies": {
      "chokidar-cli": "^3.0.0",
      "rimraf": "^3.0.2",
      "tiny-glob": "^0.2.9",
      "typescript": "^4.5.5",
      "sass": "^1.49.7",
      "solid-js": "^1.3.5"
    },
    "dependencies": {
      "tslib": "^2.3.1"
    },
    "peerDependencies": {
      "solid-js": "^1.3.5"
    }
  }
  